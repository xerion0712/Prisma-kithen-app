datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Room {
  id          String     @id @default(uuid())
  createdAt   DateTime   @default(now())
  description String
  questions   Question[]
  title       String
  userId      String
  members     Member[]

  @@index([userId])
}

model Member {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  roomId    String
  userId    String

  @@index([userId])
}

model Question {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  content   String
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  roomId    String
  userId    String
  votes     Vote[]

  @@index([userId])
}

model Vote {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  content    String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  questionId String
  userId     String

  @@unique([questionId, userId])
  @@index([userId])
}
